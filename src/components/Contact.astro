---
import { t } from '../content';
---

<section id="contact" class="section section--alt">
  <div class="container">
    <h2 class="section__title">{t.contact.title}</h2>
    <p class="section__subtitle">{t.contact.subtitle}</p>
    <div class="contact__grid">
      <div class="contact__item">
        <svg class="contact__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="12 6 12 12 16 14"/>
        </svg>
        <p class="contact__label">{t.contact.scheduleLabel}</p>
        <p class="contact__value">{t.contact.scheduleValue}</p>
      </div>
      <div class="contact__item">
        <svg class="contact__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <p class="contact__label">{t.contact.locationLabel}</p>
        <p class="contact__value">{t.contact.locationValue}</p>
        <p class="contact__value">
          <a href="https://maps.app.goo.gl/PEHxo85Skv7LFi8j8" target="_blank" rel="noopener noreferrer">{t.contact.viewOnMap}</a>
        </p>
      </div>
      <div class="contact__item">
        <svg class="contact__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <rect x="2" y="4" width="20" height="16" rx="2"/>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
        <p class="contact__label">{t.contact.emailLabel}</p>
        <p class="contact__value">
          <a href="mailto:irisoneunited@gmail.com">irisoneunited@gmail.com</a>
        </p>
      </div>
      <div class="contact__item">
        <svg class="contact__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        <p class="contact__label">{t.contact.phoneLabel}</p>
        <p class="contact__value">
          <a href="tel:+447789297482">077 8929 7482</a>
        </p>
      </div>
    </div>
    <div class="contact__map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d9972!2d-0.1677329!3d51.3626838!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4876076db66d1723%3A0x42cda0d0b40e7c5d!2sAikido%20Kankoujiryu!5e0!3m2!1sen!2suk"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Aikido Kankouji-ryu location"
      ></iframe>
    </div>
  </div>
</section>
