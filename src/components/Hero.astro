---
import { Image } from 'astro:assets';
import heroImage from '../assets/image3.jpeg';
import type { Translations } from '../i18n/translations';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<section class="hero">
  <Image
    src={heroImage}
    alt="Aikido training session at Kankouji-ryu dojo"
    class="hero__image"
    widths={[600, 900, 1200, 1800]}
    sizes="100vw"
    loading="eager"
  />
  <div class="hero__content">
    <h1 class="hero__title-jp">{t.hero.titleJp}</h1>
    <p class="hero__title-en">{t.hero.titleEn}</p>
    <p class="hero__tagline">{t.hero.tagline}</p>
    <a href="#contact" class="hero__cta">{t.hero.cta}</a>
  </div>
  <a href="#about" class="hero__scroll" aria-label={t.hero.scroll}>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </a>
</section>