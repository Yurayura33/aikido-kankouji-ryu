---
import { Image } from 'astro:assets';
import instructorImage from '../assets/image1.jpeg';
import type { Translations } from '../i18n/translations';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<section id="instructor" class="section">
  <div class="container">
    <h2 class="section__title">{t.instructor.title}</h2>
    <p class="section__subtitle">{t.instructor.subtitle}</p>
    <div class="instructor__grid">
      <div class="instructor__image-wrapper">
        <Image
          src={instructorImage}
          alt="Joseph Eiko, 7th Dan Shihan of Kankouji-ryu"
          widths={[300, 500, 700]}
          sizes="(min-width: 768px) 350px, 100vw"
          loading="lazy"
        />
      </div>
      <div class="instructor__info">
        <h3 class="instructor__name">{t.instructor.name}</h3>
        <p class="instructor__rank">{t.instructor.rank}</p>
        <p class="instructor__bio">{t.instructor.bio1}</p>
        <p class="instructor__bio">{t.instructor.bio2}</p>
      </div>
    </div>
  </div>
</section>
