---
interface Props {
  title: string;
  description: string;
  lang?: string;
  ogLocale?: string;
}

const { title, description, lang = 'en', ogLocale = 'en_GB' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = '/aikido-kankouji-ryu';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'none'; script-src 'none'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; img-src 'self' data:; frame-src https://www.google.com; form-action 'none'; base-uri 'self'; connect-src 'self';"
    />
    <meta name="description" content={description} />
    <meta name="author" content="Joseph Eiko" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Hreflang alternate links -->
    <link rel="alternate" hreflang="en" href={new URL(`${base}/en/`, Astro.site)} />
    <link rel="alternate" hreflang="ja" href={new URL(`${base}/ja/`, Astro.site)} />
    <link rel="alternate" hreflang="x-default" href={new URL(`${base}/en/`, Astro.site)} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content={ogLocale} />

    <!-- Google Fonts (Noto Serif JP + Noto Sans JP) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&family=Noto+Serif+JP:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SportsActivityLocation",
      "name": "Aikido Kankouji-ryu",
      "description": description,
      "url": canonicalURL,
      "sport": "Aikido",
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "GB"
      }
    })} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
